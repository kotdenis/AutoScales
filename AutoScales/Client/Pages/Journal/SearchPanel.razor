<div class="container mt-2">
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-sm">
            <h2 class="text-center" style="font-weight:bold;">Search panel</h2>
            <div class="row">
                <div class="col-sm">
                    <form>
                        <div>
                            <label class="form-label" style="font-weight:bold;"><i class="fa fa-solid fa-calendar"></i>&nbsp;Weighing date</label>
                        </div>
                        <div>
                            <input class="form-control" type="date" @bind-value="SearchModel.WeghingDate" />
                        </div>
                    </form>
                </div>
                <div class="col-sm">
                    <form>
                        <div>
                            <label class="form-label" style="font-weight:bold;"><i class="fa fa-solid fa-truck"></i>&nbsp;Care plate</label>
                        </div>
                        <div>
                            <input class="form-control"  @bind-value="SearchModel.CarPlate"/>
                        </div>
                    </form>
                    <div style="float:right;margin-top:1em;margin-bottom:2em;">
                        <button class="btn btn-success" style="font-weight:bold;" @onclick="async() => await SearchAsync()">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public SearchModel SearchModel { get; set; } = new();
    [Parameter]
    public Func<Task> SearchAsync { get; set; }
}
